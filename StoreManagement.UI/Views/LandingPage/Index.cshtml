@{
    Layout = "";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Dashboard - Store Management</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <link href="~/css/pagecss/landingpage.css" rel="stylesheet" />
</head>
<body>
    <div class="container px-4 py-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>Dashboard</h1>
            <div>
                <span class="me-3">Welcome, <strong>@User.FindFirst("FullName")?.Value</strong></span>
                <a href="/Home/Logout" class="btn btn-outline-danger btn-sm">Logout</a>
            </div>
        </div>

        <h2 class="fs-5 mb-3">Workspaces</h2>

        <div id="skel" class="row g-4 mb-5">
            <div class="col-xl-2 col-lg-3 col-md-4 col-sm-6">
                <div class="skeleton"></div>
            </div>
        </div>

        <div id="content" class="row g-3 mb-5 hidden">
            <div class="col-xl-2 col-lg-3 col-md-4 col-sm-6"><a href="#" class="workspace-tile"><div class="icon-wrap"><i class="bi-diagram-3-fill"></i></div><div class="workspace-title">Inventory Management</div></a></div>
            <div class="col-xl-2 col-lg-3 col-md-4 col-sm-6"><a href="#" class="workspace-tile"><div class="icon-wrap"><i class="bi-box-arrow-up-right"></i></div><div class="workspace-title">Sales Reports</div></a></div>
            <div class="col-xl-2 col-lg-3 col-md-4 col-sm-6"><a href="#" class="workspace-tile"><div class="icon-wrap"><i class="bi-shield-check"></i></div><div class="workspace-title">Stock Audit</div></a></div>
            <div class="col-xl-2 col-lg-3 col-md-4 col-sm-6"><a href="#" class="workspace-tile"><div class="icon-wrap"><i class="bi-award-fill"></i></div><div class="workspace-title">Employee Records</div></a></div>
        </div>

        <h2 class="fs-5 mb-3">Quick starts</h2>

        <div class="row g-3">
            <div class="col-xl-3 col-md-6"><a href="#" class="quick-tile"><div class="quick-icon"><i class="bi bi-cash-coin"></i></div><div>Daily Earnings Overview</div></a></div>
            <div class="col-xl-3 col-md-6"><a href="#" class="quick-tile"><div class="quick-icon"><i class="bi bi-gift-fill"></i></div><div>Promotions & Offers</div></a></div>
            <div class="col-xl-3 col-md-6"><a href="#" class="quick-tile"><div class="quick-icon"><i class="bi bi-people"></i></div><div>Customer Feedback</div></a></div>
            <div class="col-xl-3 col-md-6"><a href="#" class="quick-tile"><div class="quick-icon"><i class="bi bi-receipt"></i></div><div>Supplier Invoices</div></a></div>
        </div>
    </div>

    <script src="~/js/site.js"></script>
    <script>
        setTimeout(() => {
            document.getElementById("skel").classList.add("hidden");
            document.getElementById("content").classList.remove("hidden");
        }, 800);
    </script>
</body>
</html>
